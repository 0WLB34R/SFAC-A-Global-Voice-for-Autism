<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <ImageView
        android:id="@+id/top_menu"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:srcCompat="@drawable/top_menu" />
    <ImageView
        android:id="@+id/top_title"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/agvfa" />
    <LinearLayout
        android:paddingTop="10dp"
        android:id="@+id/buttons1"
        android:layout_below="@id/top_menu"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/education_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:padding="5dp"
            app:srcCompat="@drawable/education_button" />
        <ImageView
            android:id="@+id/support_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:padding="5dp"
            app:srcCompat="@drawable/support_button" />
    </LinearLayout>
    <LinearLayout
        android:paddingTop="10dp"
        android:id="@+id/buttons2"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:orientation="horizontal"
        android:layout_below="@+id/buttons1">
        <ImageView
            android:id="@+id/community"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:padding="5dp"
            app:srcCompat="@drawable/community_button" />
        <ImageView
            android:id="@+id/about_us_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:padding="5dp"
            app:srcCompat="@drawable/about_us_button" />
    </LinearLayout>
</RelativeLayout>