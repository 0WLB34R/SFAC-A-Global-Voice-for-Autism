<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:background="@color/colorPrimaryDark"
    tools:context=".activities.CommunityLoginActivity">

    <ImageView
        android:id="@+id/secureimage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:srcCompat="@drawable/user">

    </ImageView>

    <EditText
        android:id="@+id/usernamelog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"

        android:hint="UserName"
        android:textColor="#1E1C1C"
        android:textColorHighlight="#E61919"
        >

    </EditText>

    <EditText
        android:id="@+id/passwordlog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_marginTop="50dp"
        android:layout_below="@id/usernamelog"
       >

    </EditText>
    <Button
        android:id="@+id/signinlog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:background="#FFC107"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/passwordlog">

    </Button>

</RelativeLayout>