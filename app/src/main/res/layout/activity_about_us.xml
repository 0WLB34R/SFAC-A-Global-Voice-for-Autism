<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FDF1FF">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <ImageView
        android:id="@+id/whoweareimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="35dp"
        android:layout_marginBottom="30dp"
        app:srcCompat="@drawable/whoweare"
        tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/whoweare"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="@string/who_we_are"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#000000" />

    <ImageView
        android:id="@+id/foundingstimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="30dp"
        android:layout_marginBottom="30dp"
        app:srcCompat="@drawable/foundingst"
        tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/foundingst"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/founding_story"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#000000" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>